= form_for @pointcloud, :html => {:multipart => true } do |f|
  .form_row
    = f.label :label
    = f.text_field :label
  .form_row
    = f.label :path
    = f.file_field :path
  .form_row
    = f.label :source
    = f.text_field :source
  .form_row
    = f.label :format
    = f.select :format, ["riegl_txt", "uos", "xyzr"]
  .form_row
    = f.label :description
    = f.text_area :description
  .buttons
    = f.submit